    {
      "actor": "Rin",
      "name": "Lumo… I remembered something.",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Lumo",
      "name": "What was it?",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Rin",
      "name": "I saw this place before. Not here… but similar.",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Lumo",
      "name": "Tell me.",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Rin",
      "name": "I visited ruins like these when I was young.",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Rin",
      "name": "My sister and I climbed the broken stones.",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Rin",
      "name": "We laughed. We played until sunset.",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Lumo",
      "name": "Where was it?",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Rin",
      "name": "Far away. In the eastern valley.",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Rin",
      "name": "We stayed in a tent. My father made tea.",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Lumo",
      "name": "What happened then?",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Rin",
      "name": "A storm came. We ran. We got lost.",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Lumo",
      "name": "Did you find the way back?",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Rin",
      "name": "He found us. He waited at the old tree.",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Lumo",
      "name": "He didn’t leave?",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Rin",
      "name": "No. He believed we’d return.",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": ""
        }
      ]
    },
    {
      "actor": "Lumo",
      "name": "What sentence matches the story?",
      "dialogType": "Normal",
      "translates": [
        {
          "lang": "ru-RU",
          "name": "Какое предложение соответствует рассказу?"
        }
      ],
      "actions": [
        {
          "name": "They got lost during a storm.",
          "isCorrect": true,
          "score": 1
        },
        {
          "name": "They stayed at home.",
